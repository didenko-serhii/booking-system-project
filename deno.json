{
  "imports": {
    "drizzle-kit": "npm:drizzle-kit@^0.28.1",
    "drizzle-orm": "npm:drizzle-orm@^0.36.3",
    "hono": "jsr:@hono/hono@^4.6.11",
    "pg": "npm:pg@^8.13.1"
  },
  "tasks": {
    "start": "deno run --allow-net main.ts",
    "start:prod": "deno run --allow-net --allow-env --allow-read --allow-write main.js",
    "db:generate": "deno --env -A --node-modules-dir npm:drizzle-kit generate",
    "db:migrate": "deno --env -A --node-modules-dir npm:drizzle-kit migrate"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  }
}
